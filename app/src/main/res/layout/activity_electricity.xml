<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.bengkelradio.simplewebview.electricity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="Electricity"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <Button
        android:id="@+id/but1"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="Lamp 1" />

    <Button
        android:id="@+id/but2"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/but1"
        android:layout_alignStart="@+id/but1"
        android:layout_below="@+id/but1"
        android:layout_marginTop="30dp"
        android:text="Lamp 3" />

    <Button
        android:id="@+id/but3"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/but2"
        android:layout_alignStart="@+id/but2"
        android:layout_below="@+id/but2"
        android:layout_marginTop="30dp"
        android:text="Server" />

    <Button
        android:id="@+id/but4"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="LAMP 2" />

    <Button
        android:id="@+id/but5"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/but4"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="REFRIGERATOR" />

    <Button
        android:id="@+id/but6"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/but5"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="TV" />
</RelativeLayout>